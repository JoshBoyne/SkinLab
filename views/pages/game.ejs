    ---Game Page---
    This if the HTML for the game page. The user will be able to play either the "Case Opening Simulator" or the "Trade-Up Simulator". 
    -->

<html>
    <head>
        <title>SkinLab</title>
        <link rel="icon" sizes="180x180" href="/img/SkinLogo.webp">
        <link rel="stylesheet" href="/css/style.css"/>
        <title>SkinLab</title>
    </head>
    <body class = "game-body">

        <%- include('../partials/header', { activeTab: 'list' }) %>

   
        <div class="game-container">
            <h1>Game Page</h1>
            <div class="games">
                <!-- Case Opening Simulator -->
                <div class="game-section case-opening">
                    <h2>Case Opening Simulator</h2>
                    <p>Try your luck! Select a case to view its skins and start opening.</p>
                    <div class="case-controls">
                        <select id="caseDropdown" class="case-dropdown">
                            <option value="" disabled selected>Select a Case</option>
                        </select>
                        <button id="confirmButton" class="case-confirm-button">Confirm</button>
                        <button id="previewButton" class="case-preview-button" style="display: none;">Preview Skins</button>
                        <button id="openButton" class="case-open-button" style="display: none;">Open</button>
                    </div>
                    <div id="crateImageContainer" class="crate-image-container">
                       
                    </div>
                    <div id="randomSkinContainer" class="random-skin-container">
                       
                    </div>
                    <div id="skinsDisplay" class="skins-grid">
                      
                    </div>
                </div>
    
                <!-- Trade-Up Simulator -->
                <div class="game-section trade-up-section">
                    <h2>Trade-Up Simulator</h2>
                    <p>Select 6 skins from your collection to trade up for a rare skin.</p>
                
                    <!-- Combo Boxes for Skin Selection -->
                    <div id="tradeUpSelectors" class="trade-up-selectors">
                        <select class="trade-up-combo" data-index="0">
                            <option value="" disabled selected>Select Skin 1</option>
                        </select>
                        <select class="trade-up-combo" data-index="1">
                            <option value="" disabled selected>Select Skin 2</option>
                        </select>
                        <select class="trade-up-combo" data-index="2">
                            <option value="" disabled selected>Select Skin 3</option>
                        </select>
                        <select class="trade-up-combo" data-index="3">
                            <option value="" disabled selected>Select Skin 4</option>
                        </select>
                        <select class="trade-up-combo" data-index="4">
                            <option value="" disabled selected>Select Skin 5</option>
                        </select>
                        <select class="trade-up-combo" data-index="5">
                            <option value="" disabled selected>Select Skin 6</option>
                        </select>
                    </div>
                
                    <!-- Buttons -->
                    <div class="trade-up-actions">
                        <button id="clearAllButton" class="clear-all-button">Clear All</button>
                        <button id="tradeUpButton" class="trade-up-button" disabled>Trade-Up</button>
                    </div>
                
                    <!-- Display for the new skin -->
                    <div id="tradeUpResult" class="trade-up-result">
                    </div>
                </div>
        </div>
    
        <script src="/js/case_simulator.js"></script>
        <script src="/js/trade_up_simulator.js"></script>
    
    </body>


</html>
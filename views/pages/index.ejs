    ---Home Page---
    This is the home page for the SkinLab website. It displays a carousel of selected skins and a section of featured skins. It also displays 
    a pie/bar chart that shows the statistics of the skins; Skins by Rarity, Skins by Weapon Type, Skins by Case and Skins by Weapon Rarity
    -->

<html>
<head>
    <title>SkinLab</title>
    <link rel="icon" sizes="180x180" href="/img/SkinLogo.webp">

    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/pie_chart.js"></script>
    <script src="/js/bar_chart.js"></script>
    
</head>
<body class="home-body">
    <%- include('../partials/header', { activeTab: 'list' }) %>

    

    <!-- Main Content Section -->
    <div class="container">

        <div class="skin-carousel">
            <h2>Skin Carousel</h2>
            <div class="carousel">
                <% if (carouselSkins && carouselSkins.length > 0) { %>
                    <% carouselSkins.forEach((skin) => { %>
                        <div class="carousel-item">
                            <img src="<%= skin.image %>" alt="<%= skin.weapon %> - <%= skin.pattern %>" />
                            <p><%= skin.weapon %> - <%= skin.pattern %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No skins available to display.</p>
                <% } %>
            </div>
        </div>


        <div class="featured-skins">
            <h2>Featured Skins</h2>
            <div class="featured-grid">
                <% if (featuredSkins && featuredSkins.length > 0) { %>
                    <% featuredSkins.forEach((skin) => { %>
                        <div class="featured-item">
                            <img src="<%= skin.image %>" alt="<%= skin.weapon %> - <%= skin.pattern %>" />
                            <p><%= skin.weapon %> - <%= skin.pattern %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No featured skins available.</p>
                <% } %>
            </div>
        </div>


        <div class="chart-section">
            <h2>Chart</h2>
            <div class="chart-container">
                <!-- Pie Chart -->
                <div class="chart pie-chart">
                    <h3>Pie Chart</h3>
                    <select id="pieChartOptions" class="chart-select">
                        <option value="rarity" selected>Skins by Rarity</option>
                        <option value="weaponType">Skins by Weapon Type</option>
                        <option value="case">Skins by Case</option>
                        <option value="weaponRarity">Skins by Weapon Rarity</option>
                    </select>
                    <canvas id="pieChart"></canvas>
                </div>
        
                <!-- Bar Graph -->
                <div class="chart bar-chart">
                    <h3>Bar Graph</h3>
                    <select id="barChartOptions" class="chart-select">
                        <option value="rarity" selected>Skins by Rarity</option>
                        <option value="weaponType">Skins by Weapon Type</option>
                        <option value="case">Skins by Case</option>
                        <option value="weaponRarity">Skins by Weapon Rarity</option>
                    </select>
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        </div>
        


    </div>
</body>
</html>
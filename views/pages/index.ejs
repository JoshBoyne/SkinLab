<html>
<head>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/script.js"></script>
</head>
<body class="home-body">
    <%- include('../partials/header', { activeTab: 'list' }) %>

    <div class="home-search">
        <input type="text" placeholder="Search..." class="search-input" />
        <button class="search-button">🔍</button>
    </div>

    <!-- Main Content Section -->
    <div class="container">
        <div class="skin-carousel">
            <h2>Skin Carousel</h2>
            <button class="carousel-button left-button">⮜</button>
            <div class="carousel">
                <% if (skins.length > 0) { %>
                    <% skins.forEach((skin) => { %>
                        <div class="carousel-item">
                            <img src="<%= skin.image %>" alt="<%= skin.weapon %> - <%= skin.pattern %>" />
                            <p><%= skin.weapon %> - <%= skin.pattern %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No skins available to display.</p>
                <% } %>
            </div>
            <button class="carousel-button right-button">⮞</button>
        </div>


        <div class="featured-skins">
            <h2>Featured Skins</h2>
            <div class="featured-grid">
                <% if (skins.length > 0) { %>
                    <% skins.slice(0, 20).forEach((skin) => { %> 
                        <div class="featured-item">
                            <img src="<%= skin.image %>" alt="<%= skin.weapon %> - <%= skin.pattern %>" />
                            <p><%= skin.weapon %> - <%= skin.pattern %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No featured skins available.</p>
                <% } %>
            </div>
        </div>


        <div class="chart-section">
            <h2>Chart</h2>
            <p>This section will display a pie or bar chart.</p>
        </div>


    </div>
</body>
</html>
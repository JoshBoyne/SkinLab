<style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap');

    
    header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        padding: 0px 20px;
        height: 60px;
        background-color: #3A506B;
        color: white;
        font-family: 'Open Sans', sans-serif;
        font-size: 20px;
        box-sizing: border-box;
    }

    .logo {
        font-size: 20px;
        font-weight: bold;
        color: #E5E5E5;
    }

    .navbar {
        display: flex;
        justify-content: center;
        align-items: center; /* Align items vertically */
    }

    .tabs {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .tabs li {
        margin: 0 10px; /* Adjust spacing between tabs */
    }

    .tabs a {
        text-decoration: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        display: inline-block; 
        text-align: center;
    }

    .tabs a.active,
    .tabs a:hover {
        background-color: #575757;
        color: #FCA311; /* Text color on highlight */
    }

    .search-container {
        display: flex;
            align-items: center;
            height: 100%;
    }

    .navsearch-input {
        width: 300px;
        border: 1px solid #FFD56B;
        border-radius: 5px;
        outline: none;
        font-family: 'Open Sans', sans-serif;
        padding: 6px; /* Adjust padding without affecting height */
        box-sizing: border-box;
    }

    .search-button {
        margin-left: 5px;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        background-color: #575757;
        color: white;
        cursor: pointer;
    }

    .search-button:hover {
        background-color: #444;
    }

    body {
        margin: 0px;
    }
    
</style>

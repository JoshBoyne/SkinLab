<header>
    <div class="logo">SkinLab</div>
<nav class = "navbar">
    <ul class="tabs">
        <li><a href="/" class="<%= activeTab === 'home' ? 'active' : '' %>">Home</a></li>
        <li><a href="/game" class="<%= activeTab === 'game' ? 'active' : '' %>">Game</a></li>
        <li><a href="/skin" class="<%= activeTab === 'skin' ? 'active' : '' %>">Skin Catalogue</a></li>
        <li><a href="/collection" class="<%= activeTab === 'collection' ? 'active' : '' %>">My Collection</a></li>
        
    </ul>
</nav>
<div class="search-container">
    <form id="searchForm" onsubmit="return handleSearch(event)">
        <input
            type="text"
            id="searchInput"
            placeholder="Search..."
            class="navsearch-input"
        />
        <button type="submit" class="search-button">üîç</button>
    </form>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap');

    
    header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        padding: 0px 20px;
        height: 60px;
        background-color: #3A506B;
        color: white;
        font-family: 'Open Sans', sans-serif;
        font-size: 20px;
        box-sizing: border-box;
    }

    .logo {
        font-size: 20px;
        font-weight: bold;
        color: #E5E5E5;
    }

    .navbar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 100px;
    }

    .tabs {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .tabs li {
        margin: 0 10px;
    }

    .tabs a {
        text-decoration: none;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        display: inline-block; 
        text-align: center;
    }

    .tabs a.active,
    .tabs a:hover {
        background-color: #575757;
        color: #FCA311;
    }

    .search-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px; 
        height: auto; 
    }

    .navsearch-input {
        width: 200px;
        border: 1px solid #FFD56B;
        border-radius: 5px;
        outline: none;
        font-family: 'Open Sans', sans-serif;
        padding: 6px;
        box-sizing: border-box;
    }

    .search-button {
        margin-left: 5px;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        background-color: #575757;
        color: white;
        cursor: pointer;
    }

    .search-button:hover {
        background-color: #444;
    }

    body {
        margin: 0px;
    }
    
</style>
</header>
<script>
    function handleSearch(event) {
        event.preventDefault();

        const searchInput = document.getElementById("searchInput").value.toLowerCase();

        // page keywords used for search
        const pages = {
            home: "/",
            game: "/game",
            "skin catalogue": "/skin",
            "my collection": "/collection",
        };

        const pageKey = Object.keys(pages).find((key) =>
            key.includes(searchInput)
        );

        if (pageKey) {
            window.location.href = pages[pageKey]; //goes to matching page
        } else {
            alert("Page not found. Try searching 'Home', 'Game', 'Skin Catalogue', or 'My Collection'.");
        }
    }
</script>